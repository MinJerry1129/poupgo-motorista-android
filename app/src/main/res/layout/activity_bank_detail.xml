<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.poupgo.driver.BankDetailActivity">

    <include
        android:id="@+id/headar_area"
        layout="@layout/design_toolbar_general"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headar_area">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headar_area"

            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <include
                android:id="@+id/vBankAccountHolderNameBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                android:id="@+id/vPaymentEmailBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.view.MTextView
                android:layout_width="wrap_content"
                android:text="Nome do banco"
                android:layout_marginTop="10sp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/vBankName"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:paddingBottom="10sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/gray"
                android:layout_height="1dp"/>

            <com.view.MTextView
                android:layout_width="wrap_content"
                android:text="Tipo de Conta"
                android:layout_marginTop="10sp"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/vBIC_SWIFT_Code"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/gray"
                android:layout_height="1dp"/>

            <include
                android:id="@+id/vBankLocation"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                android:id="@+id/vAccountNumberBox"
                layout="@layout/editbox_form_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/submitBtn"
                layout="@layout/btn_type_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"></include>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
