<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/txtArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.view.MTextView
                android:id="@+id/chooseImgHTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Choose Category"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/txt_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtArea"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.view.SelectableRoundedImageView
                android:id="@+id/cameraIconImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/appThemeColor_Dark_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_camera"
                app:sriv_border_color="@color/appThemeColor_Dark_1"
                app:sriv_border_width="2dip"
                app:sriv_left_bottom_corner_radius="5dip"
                app:sriv_left_top_corner_radius="5dip"
                app:sriv_oval="true"
                app:sriv_right_bottom_corner_radius="5dip"
                app:sriv_right_top_corner_radius="5dip" />

            <com.view.SelectableRoundedImageView
                android:id="@+id/galleryIconImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/appThemeColor_Dark_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_gallery"
                app:sriv_border_color="@color/appThemeColor_Dark_1"
                app:sriv_border_width="2dip"
                app:sriv_left_bottom_corner_radius="5dip"
                app:sriv_left_top_corner_radius="5dip"
                app:sriv_oval="true"
                app:sriv_right_bottom_corner_radius="5dip"
                app:sriv_right_top_corner_radius="5dip"
                android:visibility="gone"/>

            <com.view.SelectableRoundedImageView
                android:id="@+id/docIconImgView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/appThemeColor_Dark_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_doc"
                android:visibility="gone"
                app:sriv_border_color="@color/appThemeColor_Dark_1"
                app:sriv_border_width="2dip"
                app:sriv_left_bottom_corner_radius="5dip"
                app:sriv_left_top_corner_radius="5dip"
                app:sriv_oval="true"
                app:sriv_right_bottom_corner_radius="5dip"
                app:sriv_right_top_corner_radius="5dip" />

        </LinearLayout>

        <ImageView
            android:id="@+id/closeDialogImgView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_rm_dest" />
    </RelativeLayout>

</android.support.v7.widget.CardView>